{
	"name": "auto-using",
	"displayName": "Auto-Using for C#",
	"version": "0.1.1",
	"publisher": "Fudge",
	"repository": {
		"type":"git",
		"url":"https://github.com/natanfudge/Auto-Using"
	},
	"bugs":{
		"url":"https://github.com/natanfudge/Auto-Using/issues"
	},
	
	"keywords": [
		"C#",
		"csharp",
        "import",
		"require",
		"using",
		"auto-using",
        "auto-import"
    ],
	"engines": {
		"vscode": "^1.18.0"
	},
	"categories": [
		"Other"
	],
	"contributes": {
		"commands":[
			{
				"command": "extension.wipeCommon",
				"title": "Wipe Memory Of Commonly Used References"
			}
		],
		"configuration":{
			"title": "Auto-Using for C#",
			"properties": {
				"auto-using.prefix":{
					"type":"string",
					"default":"{Import}",
					"enum": ["{Import}","No Prefix","~","~(Import)"],
					"enumDescriptions": [
						"Completions will be prefixed with {Import}.",
						"UNRECOMMENDED! There will be no prefix but hundreds of unimported references will clutter your Intellisense.",
						"Completions will be prefixed with ~.",
						"Completions will be prefixed with ~(Import)."
					],
					"description": "The prefix that will be added to unimported reference completions that you have never used for the sake of deprioritizing them."
					
				}
				
			}
		}
	},
	
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^6.0.40",
		"tslint": "^5.11.0",
		"typescript": "^2.1.4",
		"vscode": "^1.1.17"
	}
}
